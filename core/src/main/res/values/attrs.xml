    <declare-styleable name="YandexPayButton">
        <!-- Defines general personalizing button behavior. -->
        <attr name="yandexpay_personalization" format="integer" tools:ignore="ResourceName">
            <!-- The button always shows "Pay with YPay text", never becomes personalized. Default value. -->
            <enum name="none" value="0" />
            <!-- The button is personalized: shows the last used card (if any) and user's name and avatar.
            The button also updates its content upon displaying -->
            <enum name="updating" value="1" />
            <!-- The button is personalized: shows the last used card (if any) and user's name and avatar.
             The button doesn't update its contents upon displaying.
             Rather, shows the last used card number and user's name and avatar -->
            <enum name="last_value" value="2" />
        </attr>
    </declare-styleable>
