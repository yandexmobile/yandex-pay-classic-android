<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout"
    tools:context=".ui.views.AvatarView">

    <TextView
        android:id="@+id/yandexpay_avatar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/YandexPayTextAppearance.AvatarTitle"
        android:gravity="start|center_vertical"
        android:lines="1"
        android:ellipsize="end"
        tools:text="Comfly" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/yandexpay_shimmer"
        android:layout_width="@dimen/yandexpay_avatar_size"
        android:layout_height="@dimen/yandexpay_avatar_size"
        android:layout_marginStart="10dp"
        android:background="@drawable/yandexpay_avatar_shimmer_background"
        app:shimmer_base_color="?attr/yandexpay_shimmerColor"
        app:shimmer_base_alpha="1"
        app:shimmer_highlight_alpha="1"
        app:shimmer_colored="true" />

    <ImageView
        android:id="@+id/yandexpay_avatar_image"
        android:layout_width="@dimen/yandexpay_avatar_size"
        android:layout_height="@dimen/yandexpay_avatar_size"
        android:layout_marginStart="10dp"
        android:background="@drawable/yandexpay_avatar_round_background"
        android:contentDescription="@string/yandexpay_avatar" />

</merge>
