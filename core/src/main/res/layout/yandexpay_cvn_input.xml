<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout"
    tools:context=".ui.views.CvnInput">

    <TextView
        android:id="@+id/yandexpay_cvn_input_label"
        android:text="@string/yandexpay_cvv_input_title"
        android:textAppearance="@style/YandexPayTextAppearance.Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/yandexpay_cvn_input_text"
        android:hint="@string/yandexpay_card_cvn_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="flagNoExtractUi|actionNext"
        android:inputType="number"
        android:textCursorDrawable="@drawable/yandexpay_cursor"
        android:background="@android:color/transparent"
        android:paddingTop="@dimen/yandexpay_card_input_field_padding"
        android:textColor="?attr/yandexpay_cardEditTextColor"
        android:textAppearance="@style/YandexPayTextAppearance.TextInput.Input"
        android:autofillHints=""
        tools:ignore="TextFields" />

</merge>
